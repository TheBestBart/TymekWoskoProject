<%- include ../layouts/header.ejs %>
<div class="page-data">
  <p>Zalogowano: <span><%= username %></span></p>
  <form method="POST" action="/admin/edit/<%=data[0].id%>">
    <table cellpadding="11">
      <tr>
        <td class="label">Nazwa</td>
        <td><input type="text" name="nazwa" required value="<%=data[0].nazwa%>"></td>
      </tr>
      <tr>
        <td class="label">Adres</td>
        <td><textarea name="adres" required cols="30" rows="5"><%=data[0].adres%></textarea></td>
      </tr>
      <tr>
        <td class="label">E-mail</td>
        <td><input type="text" name="email" required value="<%=data[0].email%>"></td>
      </tr>
      <tr>
        <td class="label">Telefon</td>
        <td><input type="text" name="telefon" required value="<%=data[0].telefon%>"></td>
      </tr>
      <tr>
        <td class="label"></td>
        <td>
          <button type="submit">Zapisz</button>
          <button type="button" onclick="cancelAdd()">Anuluj</button>
        </td>
      </tr>
    </table>
  </form>

</div>

<%- include ../layouts/footer.ejs %>